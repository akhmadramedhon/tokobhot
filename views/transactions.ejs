<!DOCTYPE html>
<html>
<head>
    <title>Riwayat Transaksi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('includes/nav') %>

    <div class="container">
        <h2 class="fw-bold mb-4">Riwayat Transaksi</h2>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Order</th>
                            <th>Tanggal</th>
                            <th>Pelanggan</th>
                            <th>Total Belanja</th>
                            <th>Status</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.sort((a, b) => a.id - b.id); 
                        orders.forEach(o => { %>
                            <tr class="<%= o.status === 'cancelled' ? 'table-danger' : '' %>">
                                <td>#ORD-<%= o.id %></td>
                                <td><%= new Date(o.created_at).toLocaleString() %></td>
                                <td><%= o.customer_name %></td>
                                <td class="fw-bold">Rp <%= o.total_price.toLocaleString() %></td>
                                <td>
                                    <% if(o.status === 'success') { %>
                                        <span class="badge bg-success">Berhasil</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Dibatalkan</span>
                                    <% } %>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-info text-white" onclick="showDetail(<%= o.id %>)">
                                        View
                                    </button>

                                    <% if(o.status === 'success') { %>
                                        <form action="/cancel-order" method="POST" class="d-inline" onsubmit="return confirm('Batalkan order ini? Stok akan dikembalikan.')">
                                            <input type="hidden" name="order_id" value="<%= o.id %>">
                                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="detailModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detail Barang Order #<span id="modalOrderId"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <ul class="list-group" id="modalItemList">
                        </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function showDetail(orderId) {
            // Panggil API Backend
            const res = await fetch('/transaction/' + orderId);
            const items = await res.json();

            // Isi Modal
            document.getElementById('modalOrderId').innerText = orderId;
            const list = document.getElementById('modalItemList');
            list.innerHTML = ''; // Kosongkan dulu

            items.forEach(item => {
                list.innerHTML += `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${item.name}</strong>
                            <div class="text-muted small">@ Rp ${item.price_at_purchase.toLocaleString()}</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">x${item.quantity}</span>
                    </li>
                `;
            });

            // Tampilkan Modal
            new bootstrap.Modal(document.getElementById('detailModal')).show();
        }
    </script>
</body>
</html>