<!DOCTYPE html>
<html>
<head>
    <title>Dashboard Stok</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('includes/nav') %>

    <div class="container">
        <div class="row mb-3 align-items-center">
            <div class="col-md-8">
                <h2 class="fw-bold text-secondary">Stok Barang</h2>
                <p class="text-muted">Monitor ketersediaan barang.</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/create-order" class="btn btn-primary btn-lg shadow">
                    + Tambah Pembelian Baru
                </a>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nama Produk</th>
                            <th>Kategori</th>
                            <th>Harga Satuan</th>
                            <th class="text-center">Stok Tersedia</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.sort((a, b) => a.id - b.id); %>
                        <% products.forEach(p => { %>
                              <tr>
                                <td><%= p.id %></td>
                                <td class="fw-bold"><%= p.name %></td>
                                <td><span class="badge bg-secondary"><%= p.category %></span></td>
                                <td>Rp <%= p.price.toLocaleString('id-ID') %></td>
                                <td class="text-center">
                                    <% if(p.quantity > 10) { %>
                                        <span class="badge bg-success"><%= p.quantity %> unit</span>
                                    <% } else if(p.quantity > 0) { %>
                                        <span class="badge bg-warning text-dark"><%= p.quantity %> unit</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Habis</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>